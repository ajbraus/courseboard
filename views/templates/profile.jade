.container
  .row
    .col-xs-12
      .clearfix
        .pull-left 
          h3 {{user.first}} {{user.last}} #[span.text-muted ({{user.username}})]
        .pull-right
          a.btn.btn-warning(href="users/{{user._id}}/feedback" ng-show="currentUser.role == 'Instructor'") Provide Feedback
      
      
  //- .row
  //-   .col-xs-12
  //-     h4 Product Portfolio
  //- .row    
