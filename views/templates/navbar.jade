nav.navbar
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/' ng-show="currentUser") Course Board
      a.navbar-brand(href='/welcome' ng-show="!currentUser") Course Board
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        li(ng-show="currentUser.role == 'Instructor'")
          a(href="/") Home
      //- form.navbar-form.navbar-left(ng-submit="search(term)" style="z-index: 0;" ng-show='currentUser')
      //-   .input-group
      //-     input.form-control(type='text' ng-model="term" placeholder='Search all the questions!')
      //-     span.input-group-btn
      //-       button.btn.btn-default(type='submit') Search

      ul.nav.navbar-nav.navbar-right
        li(ng-show="currentUser.role == 'Instructor'")
          a(href="/instructor-dashboard") Dashboard
        li(ng-show='currentUser')
          a(href="/course-catalog") Course Catalog
        li(ng-show='currentUser')
          a(href="/products") All Products
        li.dropdown(ng-show='currentUser')
          a.dropdown-toggle(data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
            span.caret
          ul.dropdown-menu
            li
              a(href='/settings') Settings
            li(ng-show="currentUser.admin")
              a(href='/admin') Admin Dashboard
            li.divider(role='separator')
            li
              a(ng-click='logout()') Logout
        li.dropdown(ng-show='!currentUser')
          a#dropdownMenu1.dropdown-toggle(type='button', data-toggle='dropdown')
            | Login
          .dropdown-menu.dropdown-form
            form
              .form-group
                label Username or Email
                input.form-control(type='text', ng-model='user.email' required)
              .form-group
                label Password
                input.form-control(type='password', ng-model='user.password' required)
              .text-right
                a.btn.btn-link.link-text(href="/password-new") Forgot Password 
                button.btn.btn-danger(type='submit', ng-click='login()') Log In

        li.dropdown(ng-show='!currentUser')
          a#dropdownMenu1.dropdown-toggle(type='button', data-toggle='dropdown')
            | Sign Up
          .dropdown-menu.dropdown-form
            form
              .form-group
                label First Name
                input.form-control(type='text', ng-model='user.first')
              .form-group
                label Last Name
                input.form-control(type='text', ng-model='user.last')
              .form-group
                label Username
                input.form-control(type='text', ng-model='user.username')
              .form-group
                label Role
                select.form-control(ng-model="user.role")
                  option(value="Student") Student
                  option(value="Instructor") Instructor
                  option(value="Staff") Staff
              .form-group
                label Email
                input.form-control(type='email', ng-model='user.email')
              .form-group
                label Password
                input.form-control(type='password', ng-model='user.password')
              //- .form-group
              //-   label Confirm Password
              //-   input.form-control(type='password', ng-model='user.confirm')
              .text-right
                a.btn.btn-link.link-text(href="/password-new") Forgot Password 
                button.btn.btn-danger(type='submit', ng-click='signup()') Sign Up

        li(ng-show="currentUser")
          p.navbar-btn
            a.btn.btn-primary(href="/product-new") New Product