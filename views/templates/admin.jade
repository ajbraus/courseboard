.container
  .row
    .col-sm-12
      .page-header
        h3 Courses
      .card
        table.table
          tr
            th Title
            th Dates
            th Status
            th Update
          tr(ng-repeat="course in courses | orderBy: ['publishedAt']")
            td 
              a(href="/courses/{{course._id}}") {{course.title}}
            td
              span(ng-bind="course.startsOn | date:'MMM dd'")
              |  - 
              span(ng-bind="course.endsOn | date:'MMM dd'")
            td {{course.publishedAt ? 'Live': 'Draft'}}
            td 
              .btn-toolbar
                .btn-group
                  a.btn.btn-success.btn-sm(ng-hide="course.publishedAt" ng-click="publishCourse(course)") Publish Now
                  a.btn.btn-link.btn-sm(ng-show="course.publishedAt" ng-click="unPublishCourse(course)") Unpublish
                .btn-group
                  a.btn.btn-default.btn-sm(href="/courses-edit/{{course._id}}") Edit

  .row
    .col-sm-12
      .page-header
        h3 Students
      .list-group
        .list-group-item(ng-repeat="student in students")
          a.clearfix(href="/users/{{student._id}}")
            {{student.first}} {{student.last}} - {{student.username}} - {{student.email}}
          br
          .row
            .col-md-5
              h5 Courses
              a(href="/courses/{{course._id}}" ng-repeat="course in student.enrolledCourses")
                {{course.title}}
            .col-md-4
              h5 Products
              a(href="/products/{{product._id}}" ng-repeat="product in student.products")
                {{product.name}}
            .col-md-3
              h5 Competencies
              div(ng-repeat="competence in student.competences | orderBy: ['-level']")
                {{competence.level}} - {{competence.name}} 
  
  .row
    .col-sm-12
      .page-header
        h3 Instructors
      .list-group
        a.clearfix.list-group-item(ng-repeat="instructor in instructors" href="/users/{{instructor._id}}")
          {{instructor.first}} {{instructor.last}} - {{instructor.username}} - {{instructor.email}}
