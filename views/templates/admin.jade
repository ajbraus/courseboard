.row
  .col-sm-10.col-sm-offset-1
    .page-header
      h3 Students
    .list-group
      .list-group-item(ng-repeat="student in students")
        a.clearfix(href="/users/{{student._id}}")
          {{student.first}} {{student.last}} - {{student.username}} - {{student.email}}
        br
        .row
          .col-md-6
            h5 Courses
            ul(ng-show="student.enrolledCourses.length > 0")
              li(ng-repeat="course in student.enrolledCourses")
                a(href="/courses/{{course._id}}")
                  {{course.title}}
          .col-md-6
            h5 Products
            ul(ng-show="student.products.length > 0")
              li(ng-repeat="product in student.products")
                a(href="/products/{{product._id}}")
                  {{product.name}}
  
.row
  .col-sm-10.col-sm-offset-1
    .page-header
      h3 Instructors
    .list-group
      a.clearfix.list-group-item(ng-repeat="instructor in instructors" href="/users/{{instructor._id}}")
        {{instructor.first}} {{instructor.last}} - {{instructor.username}} - {{instructor.email}}

.row
  .col-sm-10.col-sm-offset-1
    .page-header
      h3 Courses
    .list-group
      a.clearfix.list-group-item(ng-repeat="course in courses" href="/courses/{{course._id}}")
        {{course.title}} - {{course.instructor.fullname}}
