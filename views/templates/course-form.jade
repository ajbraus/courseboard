.row
  .col-sm-8
    .form-group
      label Title*
      input.form-control(type="text" ng-model="course.title" autofocus="true" required)
  .col-sm-4
    .form-group
      label Instructor
      select.form-control(ng-model="course.instructor")
        option(ng-repeat="instructor in instructors" value="{{instructor._id}}") {{instructor.fullname}}
