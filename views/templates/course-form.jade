.row
  .col-sm-6
    .form-group
      label Location
      input.form-control(ng-model='course.location')
  .col-sm-6
    .form-group
      label Commitment per Week
      select.form-control(ng-model="course.hours")
        option(value="1") 1 Hour
        option(value="2") 2 Hours
        option(value="3") 3 Hours
        option(value="4") 4 Hours
        option(value="5") 5 Hours
        option(value="6") 6 Hours
        option(value="7") 7 Hours
        option(value="8") 8 Hours
        option(value="9") 9 Hours
        option(value="10") 10 Hours

.form-group
  label Description
  textarea.form-control(type="text" ng-model="course.description" rows="10")
.form-group
  label Objectives
  p
    small.text-muted By the end, students will be able to ...
  .input-group.margin-bottom(ng-repeat='objective in course.objectives track by $index')
    input.form-control(type='text' ng-model='course.objectives[$index]')
    .input-group-btn
      .btn.btn-default(ng-click="rmObjectiveField($index)")
        i.icon.ion-minus-circled
